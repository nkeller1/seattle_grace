<h1> <%=  @doctor.name  %> </h1>
<h3> <%=  @doctor.specialty  %> </h3>
<h3><%=  @doctor.university  %> </h3>

<h3><%= @doctor.hospital.name %></h3>

<% @doctor.patients.each do |patient| %>
  <section id="patient-<%=patient.id%>">
  <%= patient.name %>
  <%= link_to "Remove Patient", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
  </section>
<% end %>
